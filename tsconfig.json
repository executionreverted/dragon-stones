{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "rootDirs": [
      "./contracts",
      "./scripts",
      "./test"
    ],
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./test",
    "./contracts",
    "./scripts"
  ],
}